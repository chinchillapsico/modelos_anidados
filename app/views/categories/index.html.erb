<div class='my-5'>
<p id="notice"><%= notice %></p>

<h1>Categorias</h1>

<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Cantidad de productos</th>
      <th scope="col">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.products.size %></td>
        <td><%= link_to 'Show', category, :class => 'btn btn-success text-white' %></td>
        <td><%= link_to 'Edit', edit_category_path(category), :class => 'btn btn-primary text-white' %></td>
        <td><%= link_to 'Destroy', category, method: :delete, :class => 'btn btn-danger text-white', data: { confirm: '¿Estás segu@?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>

<%= link_to 'New Category', new_category_path, :class => 'btn btn-info text-white' %>
